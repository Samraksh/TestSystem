                            <TextBox Background="#FFF0F0F0" Height="23" HorizontalAlignment="Left" Margin="5,10,0,0" Name="tbTypeFilter" Text="" VerticalAlignment="Top" Width="95" TextChanged="tbFilter_TextChanged" Grid.Column="1"/>
                            <TextBox Background="#FFF0F0F0" Height="23" HorizontalAlignment="Left" Margin="5,10,0,0" Name="tbPathFilter" Text="" VerticalAlignment="Top" Width="245" TextChanged="tbFilter_TextChanged" Grid.Column="2"/>
                            <TextBox Background="#FFF0F0F0" Height="23" HorizontalAlignment="Left" Margin="5,10,35,0" Name="tbDescFilter" Text="" VerticalAlignment="Top" Width="245" TextChanged="tbFilter_TextChanged" Grid.Column="3"/>
                        </Grid>
                    </GroupBox>
                    <Grid Grid.Row="1" Grid.Column="2">
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
