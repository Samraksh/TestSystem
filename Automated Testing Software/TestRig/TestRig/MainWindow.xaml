                                <ComboBoxItem Content="Emote v1 - JTAG" />
                                <ComboBoxItem Content="Emote.Now - JTAG" />
                                <ComboBoxItem Content="Soc8200 - JTAG" />
                                <ComboBoxItem Content="Adapt - fastboot" IsEnabled="True" />
                                <ComboBoxItem Content="Adapt - JTAG"/>
                            </ComboBox>
                            <Label Content="Memory Type:" HorizontalAlignment="Left" Margin="10,0,0,0" Name="label6" VerticalAlignment="Top" Grid.Row="1" Grid.Column="0"/>
                            <ComboBox Height="23" HorizontalAlignment="Left" Margin="10,0,0,0" Name="cbMemory" SelectedIndex="0" VerticalAlignment="Top" Width="188" SelectionChanged="cbMemory_SelectionChanged" Grid.Row="1" Grid.Column="1">
                                <ComboBoxItem x:Name="FLASH" Content="FLASH" />
                                <ComboBoxItem x:Name="RAM" Content="RAM" />
                                <ComboBoxItem x:Name="External_FLASH" Content="External FLASH" IsEnabled="False" />
                            </ComboBox>
                            <Label Content="GCC Version:" Height="28" HorizontalAlignment="Left" Margin="10,0,0,0" Name="lblGCCVersion" VerticalAlignment="Top"  Grid.Row="2" Grid.Column="0"/>
