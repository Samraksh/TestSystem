                                <ComboBoxItem Content="4.0" />
                                <ComboBoxItem Content="4.3" IsEnabled="True" />
                            </ComboBox>
                            <Label Content="Location:" Height="28" HorizontalAlignment="Left" Margin="10,0,0,0" Name="lblLocation" VerticalAlignment="Top" Grid.Row="1" Grid.Column="2" />
                            <ComboBox Height="23" HorizontalAlignment="Left" Margin="10,0,0,0" Name="cbRigSelect" SelectedIndex="0" VerticalAlignment="Top" Width="164" Grid.Row="1" Grid.Column="3">
                                <ComboBoxItem Content="localRig" />
                                <ComboBoxItem Content="DublinRig" IsEnabled="False" />
                            </ComboBox>
                            <Label Content="Git Setting:" Height="28" HorizontalAlignment="Left" Margin="10,0,0,0" Name="lblMFSelected" VerticalAlignment="Top"  Grid.Row="2" Grid.Column="2"/>
                            <ComboBox Height="23" Margin="10,0,0,0" Name="cbCodeLocation" SelectedIndex="0" VerticalAlignment="Top" Width="164" SelectionChanged="cbCodeLocation_SelectionChanged" HorizontalAlignment="Left" Grid.Row="2" Grid.Column="3">
                                <ComboBoxItem Content="Use local code" />
                                <ComboBoxItem Content="Use archive code" />
                                <ComboBoxItem Content="Use archive branch code" />
                            </ComboBox>

                            <!--Hidden-->
                            <Label Content="Solution Type:" Height="28" HorizontalAlignment="Left" Margin="10,10,0,0" Name="label9" VerticalAlignment="Top" Visibility="Hidden" Grid.Row="0" Grid.Column="4"/>
                            <ComboBox Height="23" HorizontalAlignment="Left" Margin="10,10,0,0" Name="cbSolutionType" SelectedIndex="0" VerticalAlignment="Top" Width="188" SelectionChanged="cbSolutionType_SelectionChanged" Visibility="Hidden" Grid.Row="0" Grid.Column="4">
                                <ComboBoxItem Content="TinyCLR" />
                                <ComboBoxItem Content="TinyBooter" IsEnabled="True" />
                            </ComboBox>
                            <Button Name="buttonDebug" Content="Debug" Visibility="Hidden" Height="23" Margin="10,0,0,0" VerticalAlignment="Bottom" Width="75" Click="buttonDebug_Click" IsEnabled="True" Grid.Row="1" Grid.Column="4" />
                            <TextBox Name="tbCodeBranch" Visibility="Hidden" Height="23" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" Width="164" TextChanged="tbCodeBranch_TextChanged" SelectionBrush="#FF3399FF" Background="#FFF0F0F0" Grid.Row="2" Grid.Column="4" />
                            <Label Name="lblBranch" Content="Git Branch:" Visibility="Hidden" Height="28" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" Grid.Row="3" Grid.Column="4" />
                            <!--/Hidden-->
                        </Grid>
                    </GroupBox>
                </Grid>
            </TabItem>
            <TabItem Header="Test Status" Name="tabTestStatus">
                <Grid Name="gridTestStatus">
                    <ListView ItemsSource="{Binding}" HorizontalAlignment="Stretch" Margin="6,6,0,0" Name="listViewStatus" VerticalAlignment="Stretch" >
